<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/imgAnhTruyen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_op" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTenTruyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:text="Ten Truyen Tranh"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvNamSX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam San Xuat" />

        <TextView
            android:id="@+id/tvTenTG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten Tac Gia"
            />

        <!--        <TextView-->
        <!--            android:id="@+id/tvMoTa"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="150dp"-->
        <!--            android:text="Mo Ta"-->
        <!--            />-->
    </LinearLayout>
</LinearLayout>